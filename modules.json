      {
        "competency": "Data Handling & Analysis",
        "tools_packages": [
          "Pandas",
          "NumPy"
        ]
      },
      {
        "competency": "Data Visualization",
        "tools_packages": [
          "Matplotlib (line plots, histograms, boxplots)"
        ]
      },
      {
        "competency": "Bioinformatics",
        "tools_packages": [
          "Biopython"
        ]
      },
      {
        "competency": "Reproducible Research",
        "tools_packages": [
          "Git",
          "GitHub"
        ]
      }
    ]
  }
